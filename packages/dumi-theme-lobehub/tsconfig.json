{
  "include": ["src", "tests", ".dumi/**/*", "typings", "*.ts"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src"],
      "dumi-theme-lobehub": ["src"],
      "dumi-theme-lobehub/*": ["src/*"]
    }
  }
}
